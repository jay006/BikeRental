<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/orangeA700</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/pinkA700</item>
        <item name="android:textSize">@dimen/font_regular_1</item>
        <item name="android:fontFamily">@font/din_regular</item>
    </style>


    <style name="textBottomLabel" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/gray700</item>
        <item name="android:textSize">@dimen/font_caption</item>
        <item name="android:fontFamily">@font/din_light</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="textTopLabel" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/gray700</item>
        <item name="android:textSize">@dimen/font_caption</item>
        <item name="android:fontFamily">@font/din_light</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="textLabel" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/gray700</item>
        <item name="android:textSize">@dimen/font_caption</item>
        <item name="android:fontFamily">@font/din_light</item>
    </style>

    <style name="textNormal" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/gray800</item>
        <item name="android:textSize">@dimen/font_regular_2</item>
        <item name="android:fontFamily">@font/din_regular</item>
    </style>

    <style name="textNormalSmall" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/gray800</item>
        <item name="android:textSize">@dimen/font_regular_1</item>
        <item name="android:fontFamily">@font/din_regular</item>
    </style>

    <style name="textTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/gray900</item>
        <item name="android:textSize">@dimen/font_subtitle</item>
        <item name="android:fontFamily">@font/din_medium</item>
    </style>

    <style name="parentLayout">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@color/white</item>
        <item name="android:animateLayoutChanges">true</item>
    </style>

    <style name="cleanRecyclerView">
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="cleanNestedScrollView">
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">none</item>
        <item name="android:animateLayoutChanges">true</item>
    </style>

    <style name="cleanNestedScrollViewHolder">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:orientation">vertical</item>
        <item name="android:animateLayoutChanges">true</item>
    </style>

    <style name="clickableView">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="foregroundClickableView">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="imageButton">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">8dp</item>
        <item name="android:tint">@color/gray600</item>
    </style>

</resources>
